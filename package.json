{
  "name": "@discue/ui-components",
  "version": "0.3.0",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run build-lib && npm run build-types",
    "build-types": "vue-tsc --declaration --emitDeclarationOnly",
    "build-lib": "vue-cli-service build --target lib --name ui src/index.ts && rm dist/demo.html",
    "docs:serve": "nodemon --ext md,vue,js,scss --ignore docs/.vuepress/.cache --ignore docs/.vuepress/.temp --watch docs/* --watch styles --watch src/* --exec npm run docs:dev",
    "docs:dev": "npm run docs:styles && npx vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:styles": "postcss styles/styles.scss -o docs/.vuepress/styles/index.scss",
    "test:unit": "vue-cli-service test:unit --mode production",
    "test:e2e": "vue-cli-service test:e2e --mode production",
    "lint": "vue-cli-service lint",
    "release": "standard-version && git push --follow-tags origin",
    "release-minor": "standard-version --release-as minor && git push --follow-tags origin"
  },
  "files": [
    "dist",
    "types"
  ],
  "main": "./dist/ui.common.js",
  "exports": {
    ".": {
      "import": "./dist/ui.common.js",
      "require": "./dist/ui.common.js"
    }
  },
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "^5.0.4",
    "@vue/cli-service": "~5.0.0",
    "@vuepress/plugin-register-components": "^2.0.0-beta.43",
    "core-js": "^3.22.2",
    "eslint": "^8.14.0",
    "eslint-plugin-vue": "^8.0.3",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-attrs": "^4.1.3",
    "nodemon": "^2.0.16",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "standard-version": "^9.3.2",
    "tailwindcss": "^3.0.24",
    "ts-debounce": "^4.0.0",
    "vue-router": "^4.0.14",
    "vue-tsc": "^0.34.11",
    "vuepress": "2.0.0-beta.43"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
